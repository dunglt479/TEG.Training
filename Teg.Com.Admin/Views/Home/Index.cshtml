@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/vendor/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/assets/vendor/datatables/js/dataTables.bootstrap.min.js"></script>
<div class="panel panel-flat">
    <div class="panel-heading">
        <button class="btn btn-default" id="new-record-btn">
            <i class="fa fa-plus-square"></i>
            <span>New Record</span>
        </button>
        <button class="btn btn-default" id="refresh-btn" title="Refresh">
            <i class="icon-reload-alt" aria-hidden="true"></i>
        </button>
    </div>

    <div class="panel-body">
        <table id="example" class="table datatable-html">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Room</th>
                    <th>Room Description</th>
                    <th>Status</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModal-label">Task</h4>
            </div>
            <div class="modal-body" id="modal-body">

            </div>
            <div class="modal-footer" id="modal-footer">

            </div>
        </div>
    </div>
</div>

<div class="modal fade sm" id="msg-modal" tabindex="-1" role="dialog" aria-labelledby="msg-modal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="msg-modal-label">
                    <i class="fa fa-sticky-note"></i>
                    <span>
                        Notification
                    </span>
                </h4>
            </div>
            <div class="modal-body" id="msg-modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script type="text/x-jquery-tmpl" id="msg-modal-body-template">
    <div class="alert">
        <strong>${Msg}!</strong>
    </div>

</script>

<script type="text/x-jquery-tmpl" id="modal-body-template">
    <form role="form" id="create-form">
        <div class="form-group">
            <label class="control-label" for="roomName">Name: </label>
            <input type="text" class="form-control" id="roomName" name="roomName" placeholder="Min length 10 characters">
        </div>
        <div class="form-group">
            <label class="control-label" for="roomDescription">Room Description</label>
            <input type="text" class="form-control" id="roomDescription" name="roomDescription" placeholder="Descriptions">
        </div>
        <div class="form-group">
            <label class="control-label" for="Status">Status</label>
            <input type="text" class="form-control" id="Status" name="Status" placeholder="Descriptions">
        </div>
    </form>
</script>

<script type="text/x-jquery-tmpl" id="modal-body-edit-template">
    <form role="form" id="edit-form">
        <div class="form-group">
            <label class="control-label" for="roomId">Id: </label>
            <input type="text" class="form-control" id="roomId" value="${Id}" name="roomId" disabled="disabled">
        </div>
        <div class="form-group">
            <label class="control-label" for="roomName">Name: </label>
            <input type="text" class="form-control" id="roomName" value="${Name}" name="roomName" placeholder="Min length 10 characters">
        </div>
        <div class="form-group">
            <label class="control-label" for="roomDescription">Room Description</label>
            <input type="text" class="form-control" id="roomDescription" value="${Description}" name="roomDescription" placeholder="Descriptions">
        </div>
    </form>
</script>

<script type="text/x-jquery-tmpl" id="modal-footer-template">
    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-success btn-sm" id="save-btn"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save</button>
</script>

<script type="text/x-jquery-tmpl" id="modal-footer-edit-template">
    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary btn-sm" id="edit-btn"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</button>
    <button type="button" class="btn btn-danger btn-sm" id="delete-btn"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button>
</script>

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryTmpl")
<script src="~/Scripts/Room/room.js" defer></script>

